# NPC Engine Environment Variables
# Copy this file to .env and fill in your actual values

# Google AI API Key (required for ADK integration)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY="your_google_api_key_here"

# Database Configuration (optional - defaults to in-memory)
# DATABASE_URL="postgresql://user:password@localhost:5432/npc_engine"
# DATABASE_URL="sqlite:///./npc_engine.db"

# Vertex AI Configuration (optional - for cloud deployment)
# GOOGLE_CLOUD_PROJECT="your-gcp-project-id"
# GOOGLE_CLOUD_REGION="us-central1"

# Application Settings
# DEBUG=true
# LOG_LEVEL=INFO
# API_HOST=0.0.0.0
# API_PORT=8000
